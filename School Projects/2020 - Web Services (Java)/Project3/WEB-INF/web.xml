<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
   <servlet>
      <servlet-name>accounts</servlet-name>
      <servlet-class>pkg.AccountServlet</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>users</servlet-name>
      <servlet-class>pkg.UserServlet</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>catalogs</servlet-name>
      <servlet-class>pkg.CatalogServlet</servlet-class>
   </servlet>
   
   
 
   <servlet-mapping>
      <servlet-name>accounts</servlet-name>
      <url-pattern>/accounts/*</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>users</servlet-name>
      <url-pattern>/users/*</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>catalogs</servlet-name>
      <url-pattern>/catalogs/*</url-pattern>
   </servlet-mapping>
</web-app>
